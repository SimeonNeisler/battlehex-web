<link rel="stylesheet" href="/css/checkout.css">

</script>

<div class="container">
  <h3>Shopping Cart</h3>


  <h5>Total Cost: $<%= totalPrice %></h5>
  <% var cardsArr = [] %>
  <% for(var key in cart) { %>
    <% if(!cart.hasOwnProperty(key)) continue; %>
    <% var card = cart[key] %>
    <% cardsArr.push(card.cardID) %>
  <% } %>

<form>
    <a href="/store"><button class="btn btn-sm" type="button" name="button">Continue Shopping</button></a>
    <button id="purchaseButton" class="btn btn-sm btn-success">Complete Purchase</button>
</form>
</div>


<script type="text/javascript" src="/js/checkout.js" cart="<%= cardsArr %>"></script>
